<h1><%= params[:category] %></h1>

<% if @books.count == 0 %>
    <h2>There are no books in this category.</h2>
<% else %>

    <div class="row">
    <% @books.each do |book| %>
        <div class="col-md-3">
            <a href="books/<%= book.id %>">
                <%= image_tag book.book_img, class: "book" %>    
            </a>
        </div>
    <% end %>        
    </div>

<% end %>

